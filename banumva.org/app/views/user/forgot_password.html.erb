<%= form_for :user, {:controller => 'user', :action => 'forgot'} do |f| %>
  <div id="about_this_site" style="text-align:left;padding-left:25px;padding-right:25px;padding-bottom:25px;BORDER: 1px solid;BORDER-COLOR:lightgray;">

    <p class="PetitionTitleText">Forgot Password</p>
    
    <p class="PetitionTitleText"><span title="Email address you used at Registration">Email: </span><%= f.text_field :email %></p>
    <%= submit_tag 'Submit',{ :class=>"button_style" } %>
    <%= link_to "Changed my Mind", root_url,{:class=>"button_style" } %>
  </div>
<% end %>